{
  "compilerOptions": {
    "target": "es2016",    
    "lib": ["DOM", "es2016", "es2017" ],                            
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./script",  
    "typeRoots": ["./src/@types"],
    "types": [ "@league-of-foundry-developers/foundry-vtt-types"],
    "moduleResolution": "node",                 
    "forceConsistentCasingInFileNames": true,            
    "strict": true,        
    "skipLibCheck": true,
  },
  "exclude": [
    "./script/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
